<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <Button
        android:layout_width="153dp"
        android:layout_height="87dp"
        android:text="GO!"
        android:id="@+id/buttonGo"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/abc_action_bar_default_height_material"
        android:background="@drawable/gradientevermelho"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="goClicked" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:id="@+id/iconMap"
        android:layout_alignBottom="@+id/buttonGo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp"
        android:background="@drawable/icon_map"
        android:clickable="true"
        android:onClick="openMap" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:id="@+id/iconList"
        android:layout_alignBottom="@+id/buttonGo"
        android:layout_toEndOf="@+id/buttonGo"
        android:layout_marginStart="30dp"
        android:clickable="true"
        android:background="@drawable/icon_list"
        android:longClickable="false"
        android:onClick="listMapsImageClicked" />

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:id="@+id/iconMenu"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/iconList"
        android:background="@drawable/icon_menu"
        android:onClick="openConfig" />

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:id="@+id/iconSearch"
        android:background="@drawable/icon_search"
        android:layout_alignTop="@+id/iconMenu"
        android:layout_alignStart="@+id/iconList"
        android:clickable="true" />

    <TextView
        android:text="Nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/nameContactTextView"
        android:autoText="false"
        android:textSize="18sp"
        android:layout_below="@+id/iconSearch"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameContactEditText"
        android:layout_below="@+id/nameContactTextView"
        android:layout_alignParentStart="true"
        android:hint="Insira o nome do contato de emergência" />

    <TextView
        android:text="Telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameContactEditText"
        android:layout_alignParentStart="true"
        android:id="@+id/phoneTextView"
        android:autoText="false"
        android:textSize="18sp"/>

    <EditText
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_below="@+id/phoneTextView"
        android:layout_alignParentStart="true"
        android:id="@+id/phoneEditText"
        android:hint="(dd) yyyyy-dddd" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/saveButtonFirstContact"
        android:layout_toEndOf="@+id/buttonGo"
        android:id="@+id/deleteButtonFirstContact" />

    <Button
        android:text="Adicionar Outro Contato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addNewContact"
        android:layout_below="@+id/deleteButtonFirstContact"
        android:layout_alignEnd="@+id/deleteButtonFirstContact" />

    <Button
        android:text="Salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveButtonFirstContact"
        android:layout_below="@+id/nameContactEditText"
        android:layout_toStartOf="@+id/deleteButtonFirstContact" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Insira o nome do contato de emergência"
        android:ems="10"
        android:layout_below="@+id/nameSecondContactTextView"
        android:layout_alignParentStart="true"
        android:id="@+id/nameSecondContactEditText" />

    <TextView
        android:text="Telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameSecondContactEditText"
        android:layout_alignEnd="@+id/phoneTextView"
        android:layout_marginTop="10dp"
        android:id="@+id/phoneSecondContactTextView"
        android:layout_alignParentStart="true"
        android:autoText="false"
        android:textSize="18sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="(dd) yyyyy-dddd"
        android:ems="10"
        android:layout_below="@+id/phoneSecondContactTextView"
        android:layout_alignEnd="@+id/nameSecondContactEditText"
        android:layout_alignParentStart="true"
        android:id="@+id/phoneSecondContactEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="(dd) yyyyy-dddd"
        android:ems="10"
        android:id="@+id/editText9"
        android:layout_below="@+id/phoneLastContactTextView"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/buttonGo"
        android:layout_alignEnd="@+id/phoneEditText" />

    <TextView
        android:text="Telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneLastContactTextView"
        android:autoText="false"
        android:textSize="18sp"
        android:layout_below="@+id/nameLastContactEditText"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Insira o nome do contato de emergência"
        android:ems="10"
        android:id="@+id/nameLastContactEditText"
        android:layout_below="@+id/nameLastContactTextView"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Adicionar outro contato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addSecondContact"
        android:layout_below="@+id/deleteButtonSecondContact"
        android:layout_alignStart="@+id/addNewContact" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteButtonSecondContact"
        android:layout_alignBaseline="@+id/saveButtonSecondContact"
        android:layout_alignBottom="@+id/saveButtonSecondContact"
        android:layout_alignEnd="@+id/addSecondContact" />

    <Button
        android:text="Salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveButtonSecondContact"
        android:layout_below="@+id/nameSecondContactEditText"
        android:layout_alignStart="@+id/saveButtonFirstContact" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteButtonLastContact"
        android:layout_alignBaseline="@+id/saveButtonLastContact"
        android:layout_alignBottom="@+id/saveButtonLastContact"
        android:layout_toEndOf="@+id/saveButtonLastContact" />

    <Button
        android:text="Salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveButtonLastContact"
        android:layout_below="@+id/nameLastContactEditText"
        android:layout_alignEnd="@+id/buttonGo" />

    <TextView
        android:text="Nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameLastContactTextView"
        android:autoText="false"
        android:textSize="18sp"
        android:layout_below="@+id/addSecondContact"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameSecondContactTextView"
        android:autoText="false"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/addNewContact"
        android:layout_alignParentStart="true" />


</RelativeLayout>