    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:id="@+id/nomeText1"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:textColor="#cef442"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="...."
        android:id="@+id/nomeText2"
        android:layout_alignBottom="@+id/nomeText1"
        android:textSize="30dp"
        android:textColor="#cef442"
        android:layout_toEndOf="@+id/ufText2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tipo de atendimento:"
        android:paddingLeft="20dp"
        android:paddingTop = "40dp"
        android:id="@+id/gestaoText1"
        android:layout_alignParentStart="true"
        android:textColor="#cef442"
        android:textSize="30dp"
        android:layout_below="@+id/nomeText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="    ...."
        android:id="@+id/gestaoText2"
        android:textColor="#cef442"
        android:textSize="30dp"
        android:layout_below="@+id/gestaoText1"
        android:layout_above="@+id/ufText2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="UF:"
        android:paddingLeft="20dp"
        android:paddingTop="60dp"
        android:id="@+id/ufText1"
        android:layout_below="@+id/gestaoText1"
