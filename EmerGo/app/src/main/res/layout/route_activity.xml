<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:clickable="false">

    <Button
        android:layout_width="480dp"
        android:layout_height="87dp"
        android:text="CANCELAR"
        android:id="@+id/buttonGo"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/abc_action_bar_default_height_material"
        android:background="@drawable/gradientevermelho"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="cancelClicked" />


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="unlv.erc.emergo.controller.RouteActivity"
        android:layout_below="@+id/iconMenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/iconMap" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VocÃª"
        android:id="@+id/button"
        android:background="#f11313"
        android:contextClickable="false"
        android:textColor="#fbf6f6"
        android:textSize="30dp"
        android:textStyle="bold"
        android:onClick="focusOnYourPosition"
        android:layout_marginBottom="68dp"
        android:layout_above="@+id/buttonGo"
        android:layout_alignRight="@+id/userInformation"
        android:layout_alignEnd="@+id/userInformation" />

    <ImageView
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:id="@+id/userInformation"
        android:background="@drawable/user"
        android:layout_below="@+id/iconMenu"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:layout_alignBottom="@+id/button"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="30dp"
        android:id="@+id/contador"
        android:text="Ligando em : "
        android:layout_below="@+id/progressBar"
        android:layout_toLeftOf="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>