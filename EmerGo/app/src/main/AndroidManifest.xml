                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".controller.InformationUsScreenController">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

